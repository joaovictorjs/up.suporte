<UserControl
    x:Class="up.suporte.Views.ConfigureConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:up.suporte.Extensions"
    xmlns:local="clr-namespace:up.suporte.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <Button
            Margin="16"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{StaticResource Button.IconButton}">
            <Image Height="16" Source="{StaticResource ArrowLeft16x16}" />
        </Button>


        <StackPanel
            Width="240"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Image
                Height="64"
                Margin="0,0,0,32"
                Source="pack://application:,,,/Assets/Images/Icon64.ico" />

            <TextBlock
                HorizontalAlignment="Center"
                Style="{StaticResource TextBlock.Title}"
                Text="CONFIGURAR CONEXÃO" />

            <TextBlock
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                Style="{StaticResource TextBlock.Subtitle}"
                Text="Informe os dados da conexão" />

            <StackPanel Margin="0,32,0,0" Orientation="Vertical">
                <TextBox ext:TextBoxExtensions.Label="Endereço" ext:TextBoxExtensions.Placeholder="127.0.0.1" />

                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        ext:TextBoxExtensions.Label="Porta"
                        ext:TextBoxExtensions.Placeholder="5432" />

                    <TextBox
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        ext:TextBoxExtensions.Label="Banco de dados"
                        ext:TextBoxExtensions.Placeholder="base_upsuporte" />
                </Grid>

                <TextBox
                    Margin="0,16,0,0"
                    ext:TextBoxExtensions.Label="Usuário (opcional)"
                    ext:TextBoxExtensions.Placeholder="admin" />

                <Button Margin="0,16,0,0" Content="Salvar" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
